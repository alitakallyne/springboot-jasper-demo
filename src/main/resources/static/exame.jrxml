<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="laudo_simples"
              pageWidth="595"
              pageHeight="842"
              margin="20">

    <!-- PARAMETROS -->
    <parameter name="LOGO" class="java.io.InputStream"/>

    <!-- FIELDS -->
    <field name="nome" class="java.lang.String"/>
    <field name="cpf" class="java.lang.String"/>
    <field name="dataNascimento" class="java.lang.String"/>
    <field name="nomeExame" class="java.lang.String"/>
    <field name="resultado" class="java.lang.String"/>
    <field name="medicoResponsavel" class="java.lang.String"/>
    <field name="dtLaudo" class="java.lang.String"/>

    <!-- HEADER -->
    <pageHeader>
        <band height="80">
            <image>
                <reportElement x="0" y="0" width="80" height="50"/>
                <imageExpression><![CDATA[$P{LOGO}]]></imageExpression>
            </image>

            <staticText>
                <reportElement x="100" y="10" width="400" height="20"/>
                <text><![CDATA[Laudo de Exame]]></text>
            </staticText>
        </band>
    </pageHeader>

    <!-- DETAIL -->
    <detail>
        <band height="200">

            <textField>
                <reportElement x="0" y="0" width="500" height="20"/>
                <textFieldExpression><![CDATA["Paciente: " + $F{nome}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="25" width="500" height="20"/>
                <textFieldExpression><![CDATA["CPF: " + $F{cpf}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="50" width="500" height="20"/>
                <textFieldExpression><![CDATA["Exame: " + $F{nomeExame}]]></textFieldExpression>
            </textField>

            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="75" width="500" height="80"/>
                <textFieldExpression><![CDATA["Resultado: " + $F{resultado}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="160" width="500" height="20"/>
                <textFieldExpression><![CDATA["MÃ©dico: " + $F{medicoResponsavel}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>